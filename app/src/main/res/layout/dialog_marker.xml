<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#FFFFBB33"
        android:scaleType="fitCenter"

         />


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/title_Marker"
            android:layout_width="match_parent"
            android:layout_height="45dp"

            android:layout_marginBottom="0dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
android:maxLength="30"
            android:hint="หัวข้อเหตุการณ์"
            android:inputType="textEmailAddress"
            android:maxLines="1"
             />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/description_Marker"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
android:maxLength="300"
            android:hint="คำอธิบาย"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            />

    </android.support.design.widget.TextInputLayout>



    <TableRow
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <!--<Button-->
        <!--android:id="@+id/detail_button"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:fontFamily="sans-serif"-->
        <!--android:text="Detail"-->
        <!--android:textSize="8dp" />-->

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif"
        android:text="ประเภท :  " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:id="@+id/textcategory"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif"
            android:text="ชิงทรัพย์" />
    </TableRow>

    <RadioGroup
        android:id="@+id/radioGroup_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_lvl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
             />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/crimeone"/>

        <RadioButton
            android:id="@+id/radio_lvl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/crimetwo"/>

        <RadioButton
            android:id="@+id/radio_lvl3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/crimethree"/>

        <RadioButton
            android:id="@+id/radio_lvl4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/crimefour"/>

        <RadioButton
            android:id="@+id/radio_lvl5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/crimefive"/>
    </RadioGroup>


    <CalendarView
        android:id="@+id/Calendar_Marker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/btn_mark"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
        android:layout_margin="5dp"
        android:text="Mark"/>
</LinearLayout>